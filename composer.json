{
	"name": "bcgov-plugin/bcgov-emergency-info",
    "description": "Plugin for Emergency Info BC.",
	"type": "wordpress-plugin",
	"require": {
		"composer/installers": "^1.0"
	},
	"repositories": [
        {
            "type": "composer",
            "url": "https://blog.gov.bc.ca/satis"
        }
	],
	"require-dev": {
        "bcgov/wordpress-utils": "3.0.0",
		"yoast/phpunit-polyfills": "^4.0"
	},
	"autoload": {
		"psr-4": {
			"Bcgov\\EmergencyInfo\\": "src/Bcgov/EmergencyInfo/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Bcgov\\EmergencyInfo\\Tests\\": "Tests/"
		}
	},
	"scripts": {
        "setup": [
            "npm ci",
            "@build"
        ],
        "build" : [
            "npm run build"
        ],
        "production" : [
            "npm run format",
            "npm run build",
            "@checklist"
        ],
        "checklist" : [
            "Bcgov\\Script\\Checklists::postProductionChecks"
        ],
        "phpcs": [
            "Bcgov\\Script\\Standards::phpcs"
        ],
        "phpcbf": [
            "Bcgov\\Script\\Standards::phpcbf"
        ],
        "test": [
            "Bcgov\\Script\\Tests::phpunit"
        ],
        "coverage": [
            "./vendor/bin/phpunit --coverage-html ./coverage/php/"
        ]
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
