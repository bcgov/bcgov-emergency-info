{
	"name": "bcgov-plugin/bcgov-emergency-info",
    "description": "Plugin for Emergency Info BC.",
	"version": "1.0.2",
	"type": "wordpress-plugin",
	"require": {
		"composer/installers": "^1.0"
	},
	"repositories": [
        {
            "type": "composer",
            "url": "https://apps.itsm.gov.bc.ca/satis"
        }
	],
	"require-dev": {
		"bcgov/wordpress-common": "@dev",
        "bcgov/wordpress-scripts": "2.*",
        "phpunit/phpunit": "^9.6",
		"yoast/phpunit-polyfills": "^2.0"
	},
	"autoload": {
		"psr-4": {
			"Bcgov\\EmergencyInfo\\": "src/Bcgov/EmergencyInfo/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Bcgov\\EmergencyInfo\\Tests\\": "Tests/"
		}
	},
	"scripts": {
        "setup": [
            "npm ci",
            "@build"
        ],
        "build" : [
            "npm run build"
        ],
        "production" : [
            "npm run format",
            "npm run build",
            "@checklist"
        ],
        "checklist" : [
            "Bcgov\\Script\\Checklists::postProductionChecks"
        ],
        "phpcs": [
            "Bcgov\\Script\\Standards::phpcs"
        ],
        "phpcbf": [
            "Bcgov\\Script\\Standards::phpcbf"
        ],
        "setup-tests": [
			"bin/install-wp-tests.sh wordpress_test root '' localhost latest"
		],
        "test": [
            "Bcgov\\Script\\Tests::phpunit"
        ],
        "test-wp": [
            "vendor/bin/phpunit --configuration phpunit.xml.dist"
        ],
        "coverage": [
            "./vendor/bin/phpunit --coverage-html ./coverage/php/"
        ]
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
